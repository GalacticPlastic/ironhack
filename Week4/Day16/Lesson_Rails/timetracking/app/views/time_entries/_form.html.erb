<% if @my_entry.errors.any? %>
	<% @my_entry.errors.full_messages.each do |error_msg| %>
		<small class="error"><strong>Error:</strong> <%= error_msg %>.</small>
	<% end %>
<% end %>
<%= form_for [@my_project, @my_entry] do |f| %>
	<fieldset>
		<%= f.label :date %>
		<%= f.date_select :date %>
	</fieldset>
	<fieldset>
		<%= f.label :hours %>
		<%= f.text_field :hours %>
	</fieldset>
		<%= f.label :minutes %>
		<%= f.text_field :minutes %>
	</fieldset>
	<fieldset>
		<%= f.label :comment %>
		<%= f.text_area :comment %>
	</fieldset>
	<%= f.button %>
	<%= link_to 'Cancel', project_time_entries_path(@my_project) %>
<% end %>